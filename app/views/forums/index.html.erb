<% title "Forum List" %>  

<table class="table table-striped">
        <thead>
          <tr>
           <th>Forum</th>  
          <th>Description</th> 

          <th>Activity</th> 
          <th>Last Post</th> 

          </tr>
        </thead>
        <tbody>
            <% for forum in @forums %>  

          <tr>
            <td><%= link_to h(forum.name), forum_path(forum.id) %></td>
            <td><%= forum.description %></td>
            <td> 
                <% if forum.most_recent_post%>
                <% if forum.most_recent_post.last_post_at%>
                <%= distance_of_time_in_words_to_now forum.most_recent_post.last_post_at %> ago 
                <% else %>
                  no posts
                <% end %>
                <% else %>
                  no posts
                <% end %>
            </td>
            <td><%= forum.topics.count %> topics</td>
    <% if current_user.admin %>  
          <td>
            <%= link_to "Edit", edit_forum_path(forum) %>
          </td>  
          <td>
            <%= link_to "Destroy", forum, :confirm => 'Are you sure?', :method => :delete %>
          </td>
    <% end %> 
          </tr>
         <% end %>  

        </tbody>
      </table>
<% if current_user %>    
    <button type="button" class="btn btn-default"><%= link_to "New Forum", new_forum_path %></button>
<% end %>
