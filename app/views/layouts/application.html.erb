<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <link rel="shortcut icon" href="http://sydney.edu.au/business/__data/assets/file/0004/115789/favicon.ico?v=0.0.3" />

    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <div style="
  width: 79.8em;
  margin: 0 auto;"
  id="w1">  
    <div style="
    position: relative;
    padding: .7em 0 .7em 2em;
    margin: 0;
    min-width: 77.8em;"
    id="w2"><div style="
        background-color:#125687; 
        border-right: 1.5em solid #f5af00;
        font-size: 1em;
        background: #12416c;
        height: 8.8em;
        
        margin: 0;" class="masthead">
        
        <img style="left: -0.048em;

      text-align: left;"
      src="http://sydney.edu.au/images/common/university_sydney_logo.gif"/>
          
      </div>
      <div style=
      "border-style: solid;
      border-color: #dbd3c2;
      border-width: 0 .100em .100em .100em;
      width: 75.6em;
      margin: 0;
      background: #fff;
      position: relative;"
      id="w3">
    <%= render 'layouts/header' %>
   

	<%- flash.each do |key, msg| -%>
	  <div id="<%= key %>">
		<p style="float:right;"><%= link_to_function 'X', "Effect.Fade('#{key}')" %></p>
		<p><%= msg %></p>
		<div class="clear"></div>
	  </div>
	<%- end -%> 
  <div style="padding-top:10px;"class="container">
  <div class="row">

    <% if current_user %>

    <div class="span3">
            <h4>Applications</h4>
<p><%= link_to 'Feeds', root_url %></p>
     <p> <%= link_to 'Forum', forums_path %></p>
    <p><%= link_to 'Blogs', blog_path %></p>
    <p><%= link_to 'Loyalty Programme', redeempoints_path %></p></div>
          <div class="span9">
    </div>
      <% end %>


            <%= yield %>


  
    </div>
          <%= render 'layouts/footer' %>
</div>
    </div>
  </div></div>
  </body>
</html>