<h4>Customise your feed</h4>
<%= form_for(@rss_feed) do |f| %>
  <% if @rss_feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rss_feed.errors.count, "error") %> prohibited this customisation from being saved:</h2>

      <ul>
      <% @rss_feed.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   <div class="form-inline">
    Set maximum stories per feed: <%= f.number_field :max_items , style: "width:50px;" %>
  
    <%= f.submit "Apply", class: "btn"  %>
  </div>  
  
<% end %>

