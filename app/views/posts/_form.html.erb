<%= form_for @post do |f| %>
  <%= f.error_messages %>
  <% if params[:topic] %><input type="hidden" id="topic_forum_id" name="post[topic_id]" value="<%= params[:topic] %>" /><% end %> 
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content,style:"height:220px;width:440px"%>
  </p>
  <p><%= f.submit "Create Post",class:"btn"%><%= link_to "Back to List", posts_path,class:"btn" %></p>
<% end %>
