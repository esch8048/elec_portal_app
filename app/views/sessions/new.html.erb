<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset1">
	<div class="login">
			
		<%= form_tag sessions_path do %>
		  <p>
			<%= label_tag :email %><br />
			<%= text_field_tag :email, params[:email] %>
		  </p>
		  <p>
			<%= label_tag :password %><br />
			<%= password_field_tag :password %>
		  </p>
		  <p ><%= submit_tag "Log in", class: "btn btn-large btn-primary" %></p>
		  <p class="button"><%= link_to 'Register', new_user_path  %></p>
		<% end %>
	</div>
</div></div>