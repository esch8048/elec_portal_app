<% if signed_in? %>
  <div class="row">

    <aside class="span6">
      
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    
    </aside>

  <div class="span6">
      <h3>Blog Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">

    <h1>Welcome to ELECSociety Micro-Blogging App</h1>
<%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

  <% end %> 