<h1>Topics</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Last Poster</th>
    <th>Last Post At</th>
  </tr>
  <% for topic in @topics %>
    <tr>
      <td><%= topic.name %></td>
	  <% if topic.last_poster_id %>  
		  <td><%= link_to topic.most_recent_post_username, "/users/#{topic.last_poster_id}" %>  
		  <% else %>no posts<% end %> </td>
      <td><%= topic.last_post_at %></td>
    </tr>
  <% end %>
</table>
