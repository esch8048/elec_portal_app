<h1><%= @topic.name %></h1>
<table class="table table-striped table-hover">
  <tr>
    <th>Poster</th>
    <th>Content</th>
  </tr>
	<% for post in @topic.posts %> 
	<tr>
		<td><%= link_to User.find(post.user.id).name, user_url(post.user) %></td>
		<td><%= post.content %></td>
	</tr>
  <% end %>
</table>
 

<p>  
  <% if  current_user %><%= link_to "Reply", "#{new_post_path}?topic=#{@topic.id}" %> |<% end %>  
  <% if admin? %><%= link_to "Destroy Topic", @topic, :confirm => 'Are you sure?', :method => :delete %> |<% end %>  
  <%= link_to "View All", forum_path(@topic.forum_id) %>  
</p>





